                            <Button Text="Close"
                                        IsEnabled="{Binding CloseCommandEnabled}"
                                        Command="{Binding RemoteCommand}"
                                        CommandParameter="Close"/>
                            <Button Text="In Service"
                                        IsEnabled="{Binding InServiceCommandEnabled}"
                                        Command="{Binding RemoteCommand}"
                                        CommandParameter="InService"/>
                            <Button Text="Out Of Service"
                                        IsEnabled="{Binding OutOfServiceCommandEnabled}"
                                        Command="{Binding RemoteCommand}"
                                        CommandParameter="OutOfService"/>
                        </StackLayout>
                    </customcontrols:RoundedCornerView>

                </Frame>

            </Grid>
            <Grid x:Name="RemoteConfirmationGrid"
                    HorizontalOptions="FillAndExpand" 
                    VerticalOptions="FillAndExpand"
                    BackgroundColor="Transparent"
                    IsVisible="{Binding RemoteControlConfirmVisible}">
                <Grid HorizontalOptions="FillAndExpand"
                          VerticalOptions="FillAndExpand"
                          BackgroundColor="Transparent">
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding HideRemoteCommand}"/>
                    </Grid.GestureRecognizers>
                </Grid>
                <Frame
                        WidthRequest="{OnIdiom Tablet=410,Phone=260}"
                        HeightRequest="{OnIdiom Tablet=290,Phone=240}"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        BackgroundColor="White"
                        OutlineColor="Transparent"
                        BorderColor="Transparent"
                        CornerRadius="5"
                        HasShadow="False"
                        Padding="{OnIdiom Tablet=20, Phone=10}">
                    <Grid
                            BackgroundColor="Transparent"
                            ColumnSpacing="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="{OnIdiom Tablet=25,Phone=50}"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="45"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label 
                                Text="{Binding CommandConfirmationText}"
                                FontFamily="{StaticResource KlavikaCHMedium}"
                                FontSize="{StaticResource Medium}"
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="FillAndExpand"
                                HorizontalTextAlignment="Center"
                                VerticalTextAlignment="Center"
                                Grid.ColumnSpan="2"/>
                        <Label
                                Text="{extensions:Translate Comment}" 
                                FontFamily="{StaticResource KlavikaCHMedium}"
                                FontSize="{StaticResource Small}"
                                HorizontalOptions="Start"
                                VerticalOptions="Start"
                                Margin="5, 5, 0, 5"
                                HorizontalTextAlignment="Center"
                                VerticalTextAlignment="Center"
                                Grid.Row="1"/>
                        <Editor
                                Margin="3"
                                Grid.Column="1"
                                Grid.Row="1"
                                VerticalOptions="FillAndExpand"
                                HorizontalOptions="FillAndExpand"
                                Text="{Binding CommandCommentText, Mode=TwoWay}"
                                FontFamily="{StaticResource KlavikaCHRegular}"
                                FontSize="{StaticResource Small}"
                                BackgroundColor="#f4f4f4"/>
                        <Grid
                                Grid.Column="0"
                                Grid.Row="2"
                                Grid.ColumnSpan="2"
                                Padding="3"
                                VerticalOptions="FillAndExpand"
                                HorizontalOptions="FillAndExpand">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button    
                                    Grid.Column="0"
                                    BorderRadius="8"
                                    Margin="5"
                                    Text="Confirm"
                                    TextColor="White"
                                    Command="{Binding SendCommand}"
                                    FontFamily="{StaticResource KlavikaCHRegular}"
                                    FontSize="{StaticResource Medium}"
                                    VerticalOptions="FillAndExpand"
                                    HorizontalOptions="FillAndExpand"
                                    BackgroundColor="#30A9D6"/>
                            <Button  
                                    Grid.Column="1"
                                    BorderRadius="8"
                                    Margin="5"
                                    Text="Cancel"
                                    TextColor="White"
                                    Command="{Binding HideRemoteCommand}"
                                    FontFamily="{StaticResource KlavikaCHRegular}"
                                    FontSize="{StaticResource Medium}"
                                    VerticalOptions="FillAndExpand"
                                    HorizontalOptions="FillAndExpand"
                                    BackgroundColor="#30A9D6"/>
                        </Grid>
                    </Grid>
                </Frame>
            </Grid>
            <Grid x:Name="RemoteSendedMessageGrid"
                    HorizontalOptions="FillAndExpand" 
                    VerticalOptions="FillAndExpand"
                    BackgroundColor="Transparent"
                    IsVisible="{Binding RemoteControlSendedVisible}">
                <Grid.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding HideRemoteCommand}"/>
                </Grid.GestureRecognizers>
                <Frame
                        WidthRequest="{OnIdiom Tablet=260,Phone=160}"
                        HeightRequest="100"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        BackgroundColor="White"
                        OutlineColor="Transparent"
                        BorderColor="Transparent"
                        CornerRadius="5"
                        HasShadow="False"
                        Padding="0">
                    <Grid
                            BackgroundColor="Transparent" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="45"/>
                        </Grid.RowDefinitions>
                        <Label 
                                Text="{Binding CommandSendResultText}" 
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="FillAndExpand"
                                HorizontalTextAlignment="Center"
                                VerticalTextAlignment="Center"/>
                        <Button  
                                Grid.Row="1"
                                BorderRadius="8"
                                Text="Ok"
                                Margin="5"
                                TextColor="White"
                                Command="{Binding HideRemoteCommand}"
                                FontSize="{StaticResource ExtraSmall}"
                                VerticalOptions="FillAndExpand"
                                HorizontalOptions="FillAndExpand"
                                BackgroundColor="#30A9D6"/>
                    </Grid>
                </Frame>
            </Grid>
        </Grid>
    </ContentView.Content>
</ContentView>