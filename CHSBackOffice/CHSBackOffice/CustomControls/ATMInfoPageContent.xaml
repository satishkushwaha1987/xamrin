<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:extensions="clr-namespace:CHSBackOffice.Extensions"
             xmlns:customcells="clr-namespace:CHSBackOffice.CustomControls.CustomCells"
             xmlns:api="clr-namespace:CHBackOffice.ApiServices.ChsProxy;assembly=CHBackOffice.ApiServices"
             xmlns:customcontrols="clr-namespace:CHSBackOffice.CustomControls"
             xmlns:dxGrid="clr-namespace:DevExpress.Mobile.DataGrid;assembly=DevExpress.Mobile.Grid.v18.2"
             mc:Ignorable="d"
             x:Class="CHSBackOffice.CustomControls.ATMInfoPageContent">
    <ContentView.Resources>
        <ResourceDictionary>
            <Style TargetType="customcells:TextValuePairLayout">
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                <Setter Property="Separator" Value=":"/>
                <Setter Property="TextColor" Value="Black"/>
            </Style>
        </ResourceDictionary>
    </ContentView.Resources>
  <ContentView.Content>
        <Grid HorizontalOptions="FillAndExpand"
                  VerticalOptions="FillAndExpand"
                  RowSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <Grid x:Name="ContentGrid" Grid.Row="0"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="FillAndExpand">
                <Grid x:Name="OverviewGrid"
                        IsVisible="{Binding OverviewGridVisible}"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand">
                    <ScrollView 
                            Orientation="Vertical"
                            Padding="5">
                        <StackLayout
                                Orientation="Vertical"                                
                                HorizontalOptions="FillAndExpand"
                                VerticalOptions="StartAndExpand">
                            <Frame
                                    BackgroundColor="White"
                                    OutlineColor="Transparent"
                                
                                    CornerRadius="6"
                                    HeightRequest="{OnIdiom Phone=100, Tablet=140}"
                                    HasShadow="False"
                                    Margin="{OnIdiom Phone='-5,0,-5,0', Tablet='-5,0,-5,0'}"
                                    Padding="10">
                                <customcontrols:RoundedCornerView
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="FillAndExpand"
                                        RoundedCornerRadius="6"
                                        BorderWidth="{OnPlatform Android=10, iOS=10}"
                                        BackgroundColor="White"
                                        BorderColor="{Binding ColorState}"
                                        FillColor="White">
                                    <Grid
                                            Margin="{OnIdiom Phone='20,10,20,10', Tablet='30,10,30,10'}"
                                            ColumnSpacing="2"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="FillAndExpand">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                            <ColumnDefinition Width="*"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <StackLayout Grid.Column="0" 
                                                         Orientation="Vertical"
                                                         HorizontalOptions="StartAndExpand"
                                                         VerticalOptions="EndAndExpand"
                                                         IsVisible="{Binding CashDispenserDetailsIsVisible}">
                                            <customcontrols:FlowLayout
                                                    Margin="2,0,0,0"
                                                    HeightRequest="{OnIdiom Phone=50, Tablet=80}" 
                                                    Direction="Row"
                                                    Wrap="Wrap" 
                                                    FlowDirection="LeftToRight"
                                                    AlignContent="Start" 
                                                    JustifyContent="Start"  
                                                    ItemsSource="{Binding CashDispenser}">
                                                <customcontrols:FlowLayout.ItemTemplate>
                                                    <DataTemplate>
                                                        <customcontrols:ChartGrid x:Name="chartitem1"
                                                                HeightRequest="{OnIdiom Phone=50,Tablet=80}"
                                                                WidthRequest="{OnIdiom Phone=10,Tablet=20}"
                                                                Padding="0,0,5,0"
                                                                HorizontalOptions="Center"
                                                                VerticalOptions="Center"
                                                                IsDynamicColor="True"/>
                                                    </DataTemplate>
                                                </customcontrols:FlowLayout.ItemTemplate>
                                            </customcontrols:FlowLayout>
                                            <Label Text="{extensions:Translate CashDis}"
                                                    FontSize="{OnPlatform Android={OnIdiom Tablet=19, Phone=15}, iOS={OnIdiom Tablet=17, Phone=14}}" 
                                                    HorizontalTextAlignment="Start"/>
                                        </StackLayout>
                                        <StackLayout Grid.Column="1" 
                                                         Orientation="Vertical"
                                                         HorizontalOptions="StartAndExpand"
                                                         VerticalOptions="EndAndExpand"
                                                         IsVisible="{Binding CoinHopperDetailsIsVisible}">
                                            <customcontrols:FlowLayout 
                                                    Margin="2,0,0,0"
                                                    HeightRequest="{OnIdiom Phone=50, Tablet=80}" 
                                                    Direction="Row"
                                                    Wrap="Wrap" 
                                                    FlowDirection="LeftToRight"
                                                    AlignContent="Start" 
                                                    JustifyContent="Start"  
                                                    ItemsSource="{Binding CoinHopper}">
                                                <customcontrols:FlowLayout.ItemTemplate>
                                                    <DataTemplate>
                                                        <customcontrols:ChartGrid x:Name="chartitem2"
                                                                HeightRequest="{OnIdiom Phone=50,Tablet=80}"
                                                                WidthRequest="{OnIdiom Phone=10,Tablet=20}"
                                                                Padding="0,0,5,0"
                                                                HorizontalOptions="Center"
                                                                VerticalOptions="Center"
                                                                IsDynamicColor="True"/>
                                                    </DataTemplate>
                                                </customcontrols:FlowLayout.ItemTemplate>
                                            </customcontrols:FlowLayout>
                                            <Label Text="{extensions:Translate CoinsDis}" 
                                                    FontSize="{OnPlatform Android={OnIdiom Tablet=19, Phone=15}, iOS={OnIdiom Tablet=17, Phone=14}}" 
                                                    HorizontalTextAlignment="Start"/>
                                        </StackLayout>
                                        <StackLayout Grid.Column="2"
                                                         Orientation="Vertical"
                                                         HorizontalOptions="StartAndExpand"
                                                         VerticalOptions="EndAndExpand"
                                                         IsVisible="{Binding BillAcceptorDetailsIsVisible}">
                                            <customcontrols:FlowLayout 
                                                    Margin="2,0,0,0"
                                                    HeightRequest="{OnIdiom Phone=50, Tablet=80}" 
                                                    Direction="Row"
                                                    Wrap="Wrap" 
                                                    FlowDirection="LeftToRight"
                                                    AlignContent="Start" 
                                                    JustifyContent="Start"  
                                                    ItemsSource="{Binding BillAcceptor}">
                                                <customcontrols:FlowLayout.ItemTemplate>
                                                    <DataTemplate>
                                                        <customcontrols:ChartGrid x:Name="chartitem3"
                                                                HeightRequest="{OnIdiom Phone=50,Tablet=80}"
                                                                WidthRequest="{OnIdiom Phone=10,Tablet=20}" 
                                                                Padding="0,0,5,0"
                                                                HorizontalOptions="Center"
                                                                VerticalOptions="Center"
                                                                IsDynamicColor="True"/>
                                                    </DataTemplate>
                                                </customcontrols:FlowLayout.ItemTemplate>
                                            </customcontrols:FlowLayout>
                                            <Label Text="{extensions:Translate BillVal}" 
                                                    FontSize="{OnPlatform Android={OnIdiom Tablet=19, Phone=15}, iOS={OnIdiom Tablet=17, Phone=14}}" 
                                                    HorizontalTextAlignment="Start"/>
                                        </StackLayout>
                                    </Grid>
                                </customcontrols:RoundedCornerView>
                            </Frame>

                            <StackLayout Orientation="Vertical" 
                                             Margin="{OnIdiom Phone='2',Tablet='5'}">
                                <customcells:TextValuePairLayout
                                        Key="Location"
                                        Value="{Binding Location}"/>
                                <customcells:TextValuePairLayout
                                        Key="Current machine state"
                                        Value="{Binding State}"/>
                                <customcells:TextValuePairLayout
                                        Key="Current machine status"
                                        Value="{Binding Status}"/>
                                <customcells:TextValuePairLayout
                                        Key="CHS Version"
                                        Value="{Binding CHSVersion}"/>
                                <customcells:TextValuePairLayout
                                        Key="Latest runtime status"
                                        Value="{Binding RuntimeStatus}"/>
                            </StackLayout>

                            <StackLayout x:Name="EventsList"
                                    Orientation="Vertical" 
                                    Margin="{OnIdiom Phone='2',Tablet='5'}">
                                <Label Text="{extensions:Translate Events}" 
                                       HorizontalOptions="Start" 
                                       VerticalOptions="Start"
                                       FontSize="{OnPlatform Android={OnIdiom Tablet=20, Phone=16}, iOS={OnIdiom Tablet=18, Phone=15}}" />
                                <Grid HorizontalOptions="FillAndExpand" VerticalOptions="Start">
                                    <Grid.Resources>
                                        <ResourceDictionary>
                                            <Style TargetType="Label">
                                                <Setter Property="FontFamily" Value="{StaticResource KlavikaCHLight}"/>
                                            </Style>
                                        </ResourceDictionary>
                                    </Grid.Resources>
                                    <Frame BackgroundColor="White"
                                               HorizontalOptions="FillAndExpand" 
                                               VerticalOptions="FillAndExpand" 
                                               CornerRadius="5"
                                               HasShadow="False"
                                               Padding="0">
                                        <Grid BackgroundColor="#F0EFF5"
                                                  HorizontalOptions="FillAndExpand"
                                                  VerticalOptions="FillAndExpand"
                                                  IsVisible="{Binding EventsListHasNoData}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="30"></RowDefinition>
                                                <RowDefinition Height="*"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Label Text="{extensions:Translate NoDataAvailable}" Grid.Row="1"
                                                       FontSize="{StaticResource Large}"
                                                       TextColor="#808080"
                                                       HorizontalOptions="CenterAndExpand"
                                                       VerticalOptions="CenterAndExpand"/>
                                        </Grid>
                                    </Frame>
                                    <Frame
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="Start"
                                            HeightRequest="140"
                                            BackgroundColor="Transparent"
                                            OutlineColor="Transparent"
                                            BorderColor="DarkGray"
                                            CornerRadius="5"
                                            HasShadow="False"
                                            Padding="0">

                                        <ListView 
                                                Margin="1,0,1,0"
                                                ItemsSource="{Binding EventsList}"
                                                HasUnevenRows="True"
                                                HorizontalOptions="FillAndExpand"
                                                VerticalOptions="Start"
                                                BackgroundColor="Transparent"
                                                >
                                            <ListView.Resources>
                                                <ResourceDictionary>
                                                    <Style TargetType="Label">
                                                        <Setter Property="HorizontalOptions" Value="Center"/>
                                                        <Setter Property="VerticalOptions" Value="Center"/>
                                                        <Setter Property="HorizontalTextAlignment" Value="Center"/>
                                                        <Setter Property="VerticalTextAlignment" Value="Center"/>
                                                        <Setter Property="FontFamily" Value="{StaticResource KlavikaCHLight}"/>
                                                        <Setter Property="FontSize" Value="Small"/>
                                                    </Style>
                                                </ResourceDictionary>
                                            </ListView.Resources>
                                            <ListView.Header>
                                                <Grid BackgroundColor="#66CBFF" HeightRequest="30">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="2*"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Label Text="Device Name" Grid.Column="0" HorizontalOptions="StartAndExpand" Margin="5,0,0,0"/>
                                                    <Label Text="Event Summary" Grid.Column="1" HorizontalOptions="StartAndExpand" Margin="5,0,0,0"/>
                                                    <Label Text="Event Date" Grid.Column="2" HorizontalOptions="StartAndExpand" Margin="5,0,0,0"/>
                                                </Grid>
                                            </ListView.Header>
                                            <ListView.ItemTemplate>

                                                <DataTemplate>
                                                    <ViewCell>
                                                        <Grid  BackgroundColor="{Binding BackColor}" 
                                                                   Padding="0,2,0,2" 
                                                                   ColumnSpacing="0" 
                                                                   RowSpacing="0">
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="2*"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <Label Text="{Binding DeviceName}" Grid.Column="0" HorizontalOptions="StartAndExpand" Margin="5,0,0,0"/>
                                                            <Label Text="{Binding Summary}" Grid.Column="1" HorizontalOptions="StartAndExpand" Margin="5,0,0,0"/>
                                                            <Label Text="{Binding EventDate}" Grid.Column="2" HorizontalOptions="StartAndExpand" Margin="5,0,0,0"/>
                                                        </Grid>
                                                    </ViewCell>
                                                </DataTemplate>
                                            </ListView.ItemTemplate>
                                        </ListView>
                                    </Frame>
                                </Grid>
                            </StackLayout>

                            <StackLayout x:Name="CashDispenserList"
                                    Orientation="Vertical" 
                                    Margin="{OnIdiom Phone='2',Tablet='5'}"
                                    IsVisible="{Binding CashDispenserDetailsIsVisible}">
                                <Label Text="{extensions:Translate CashDispenser}" 
                                           HorizontalOptions="Start" 
                                           VerticalOptions="Start"
                                           FontSize="{OnPlatform Android={OnIdiom Tablet=20, Phone=16}, iOS={OnIdiom Tablet=18, Phone=15}}" />
                                <Frame
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="Start"
                                        HeightRequest="175"
                                        BackgroundColor="White"
                                        OutlineColor="Transparent"
                                        BorderColor="DarkGray"
                                        CornerRadius="5"
                                        HasShadow="False"
                                        Padding="0">
                                    <Frame.Resources>
                                        <ResourceDictionary>
                                            <Style TargetType="Label">
                                                <Setter Property="FontFamily" Value="{StaticResource KlavikaCHLight}"/>
                                            </Style>
                                        </ResourceDictionary>
                                    </Frame.Resources>

                                    <ListView 
                                            Margin="1,0,1,0"
                                            ItemsSource="{Binding CashDispenserDetails}"
                                            HasUnevenRows="True"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="Start" >
                                        <ListView.Resources>
                                            <ResourceDictionary>
                                                <Style TargetType="Label">
                                                    <Setter Property="HorizontalOptions" Value="Center"/>
                                                    <Setter Property="VerticalOptions" Value="Center"/>
                                                    <Setter Property="HorizontalTextAlignment" Value="Center"/>
                                                    <Setter Property="VerticalTextAlignment" Value="Center"/>
                                                    <Setter Property="FontFamily" Value="{StaticResource KlavikaCHLight}"/>
                                                    <Setter Property="FontSize" Value="Small"/>
                                                </Style>
                                                <Style TargetType="Frame">
                                                    <Setter Property="HasShadow" Value="False"/>
                                                    <Setter Property="BorderColor" Value="DarkGray"/>
                                                    <Setter Property="Padding" Value="0"/>
                                                    <Setter Property="Margin" Value="0"/>
                                                    <Setter Property="CornerRadius" Value="0"/>
                                                    <Setter Property="BackgroundColor" Value="Transparent"/>
                                                    <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                                                    <Setter Property="VerticalOptions" Value="FillAndExpand"/>
                                                </Style>
                                            </ResourceDictionary>
                                        </ListView.Resources>
                                        <ListView.Header>
                                            <Grid BackgroundColor="#66CBFF" HeightRequest="60" Padding="0" ColumnSpacing="0" RowSpacing="0" >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="3*"/>
                                                    <ColumnDefinition Width="3*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="4*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="4*"/>
                                                    <ColumnDefinition Width="3*"/>
                                                    <ColumnDefinition Width="4*"/>
                                                    <ColumnDefinition Width="7*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <Frame Grid.Column="0" Grid.RowSpan="2">
                                                    <Label Text="#"/>
                                                </Frame>
                                                <Frame Grid.Column="1" Grid.RowSpan="2">
                                                    <Label Text="Currency"/>
                                                </Frame>
                                                <Frame Grid.Column="2" Grid.RowSpan="2">
                                                    <Label Text="Denom" />
                                                </Frame>
                                                <Frame Grid.Column="3" Grid.ColumnSpan="2">
                                                    <Label Text="Dispensed"/>
                                                </Frame>
                                                <Frame Grid.Column="3" Grid.Row="1">
                                                    <Label Text="Unit"/>
                                                </Frame>
                                                <Frame Grid.Column="4" Grid.Row="1">
                                                    <Label Text="Val"/>
                                                </Frame>
                                                <Frame Grid.Column="5" Grid.ColumnSpan="2">
                                                    <Label Text="Rejected"/>
                                                </Frame>
                                                <Frame Grid.Column="5" Grid.Row="1">
                                                    <Label Text="Unit"/>
                                                </Frame>
                                                <Frame Grid.Column="6" Grid.Row="1">
                                                    <Label Text="Val"/>
                                                </Frame>
                                                <Frame Grid.Column="7" Grid.ColumnSpan="2">
                                                    <Label Text="Remaining"/>
                                                </Frame>
                                                <Frame Grid.Column="7" Grid.Row="1">
                                                    <Label Text="Unit"/>
                                                </Frame>
                                                <Frame Grid.Column="8" Grid.Row="1">
                                                    <Label Text="Val"/>
                                                </Frame>
                                                <Frame Grid.Column="9" Grid.RowSpan="2">
                                                    <Label Text="Remaining Status"/>
                                                </Frame>

                                            </Grid>
                                        </ListView.Header>
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <ViewCell>
                                                    <Grid  BackgroundColor="{Binding BackColor}" Padding="0,2,0,2" ColumnSpacing="0" RowSpacing="0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="3*"/>
                                                            <ColumnDefinition Width="3*"/>
                                                            <ColumnDefinition Width="2*"/>
                                                            <ColumnDefinition Width="4*"/>
                                                            <ColumnDefinition Width="2*"/>
                                                            <ColumnDefinition Width="4*"/>
                                                            <ColumnDefinition Width="3*"/>
                                                            <ColumnDefinition Width="4*"/>
                                                            <ColumnDefinition Width="7*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Label Text="{Binding Id}" Grid.Column="0"/>
                                                        <Label Text="{Binding Currency}" Grid.Column="1"/>
                                                        <Label Text="{Binding DenomString}" Grid.Column="2"/>
                                                        <Label Text="{Binding DispensedUnit}" Grid.Column="3"/>
                                                        <Label Text="{Binding DispensedValue}" Grid.Column="4"/>
                                                        <Label Text="{Binding RejectedUnit}" Grid.Column="5"/>
                                                        <Label Text="{Binding RejectedValue}" Grid.Column="6"/>
                                                        <Label Text="{Binding RemainingUnit}" Grid.Column="7"/>
                                                        <Label Text="{Binding RemainingValue}" Grid.Column="8"/>
                                                        <customcontrols:ChartGrid 
                                                                Grid.Column="9"
                                                                HeightRequest="7"
                                                                WidthRequest="{OnIdiom Tablet=100, Phone=60}"
                                                                Margin="{OnIdiom Phone='1,0,3,0', Tablet='1,0,3,0'}"
                                                                HorizontalOptions="Center"
                                                                VerticalOptions="Center"
                                                                InnerColor="#5C9ECD" 
                                                                OuterColor="#EBF3F9"
                                                                BorderColor="#5C9ECD"
                                                                BorderWidth="1"
                                                                PercentValue="{Binding RemainingPercent}"
                                                                ChartOrientation="Horizontal" />
                                                    </Grid>
                                                </ViewCell>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Frame>
                            </StackLayout>

                            <StackLayout x:Name="CoinHopperList"
                                    Orientation="Vertical" 
                                    Margin="{OnIdiom Phone='2',Tablet='5'}"
                                    IsVisible="{Binding CoinHopperDetailsIsVisible}">
                                <Label Text="{extensions:Translate CoinHopper}" 
                                       HorizontalOptions="Start" 
                                       VerticalOptions="Start"
                                       FontSize="{OnPlatform Android={OnIdiom Tablet=20, Phone=16}, iOS={OnIdiom Tablet=18, Phone=15}}" />
                                <Frame
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="Start"
                                        HeightRequest="134"
                                        BackgroundColor="White"
                                        OutlineColor="Transparent"
                                        BorderColor="DarkGray"
                                        CornerRadius="5"
                                        HasShadow="False"
                                        Padding="0">
                                    <Frame.Resources>
                                        <ResourceDictionary>
                                            <Style TargetType="Label">
                                                <Setter Property="FontFamily" Value="{StaticResource KlavikaCHLight}"/>
                                            </Style>
                                        </ResourceDictionary>
                                    </Frame.Resources>
                                    <ListView 
                                            WidthRequest="300"
                                            Margin="1,0,1,0"
                                            ItemsSource="{Binding CoinHopperDetails}"
                                            HasUnevenRows="True"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="Start" >
                                        <ListView.Resources>
                                            <ResourceDictionary>
                                                <Style TargetType="Label">
                                                    <Setter Property="HorizontalOptions" Value="Center"/>
                                                    <Setter Property="VerticalOptions" Value="Center"/>
                                                    <Setter Property="HorizontalTextAlignment" Value="Center"/>
                                                    <Setter Property="VerticalTextAlignment" Value="Center"/>
                                                    <Setter Property="FontFamily" Value="{StaticResource KlavikaCHLight}"/>
                                                    <Setter Property="FontSize" Value="Small"/>
                                                </Style>
                                                <Style TargetType="Frame">
                                                    <Setter Property="HasShadow" Value="False"/>
                                                    <Setter Property="BorderColor" Value="DarkGray"/>
                                                    <Setter Property="Padding" Value="0"/>
                                                    <Setter Property="Margin" Value="0"/>
                                                    <Setter Property="CornerRadius" Value="0"/>
                                                    <Setter Property="BackgroundColor" Value="Transparent"/>
                                                    <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                                                    <Setter Property="VerticalOptions" Value="FillAndExpand"/>
                                                </Style>
                                            </ResourceDictionary>
                                        </ListView.Resources>
                                        <ListView.Header>
                                            <Grid BackgroundColor="#66CBFF" HeightRequest="60" Padding="0" ColumnSpacing="0" RowSpacing="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="3*"/>
                                                    <ColumnDefinition Width="3*"/>
                                                    <ColumnDefinition Width="2*"/>
                                                    <ColumnDefinition Width="3*"/>
                                                    <ColumnDefinition Width="3*"/>
                                                    <ColumnDefinition Width="4*"/>
                                                    <ColumnDefinition Width="6*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <Frame Grid.Column="0" Grid.RowSpan="2">
                                                    <Label Text="#"/>
                                                </Frame>
                                                <Frame Grid.Column="1" Grid.RowSpan="2">
                                                    <Label Text="Currency"/>
                                                </Frame>
                                                <Frame Grid.Column="2" Grid.RowSpan="2">
                                                    <Label Text="Denom" />
                                                </Frame>
                                                <Frame Grid.Column="3" Grid.ColumnSpan="2">
                                                    <Label Text="Dispensed"/>
                                                </Frame>
                                                <Frame Grid.Column="3" Grid.Row="1">
                                                    <Label Text="Unit"/>
                                                </Frame>
                                                <Frame Grid.Column="4" Grid.Row="1">
                                                    <Label Text="Val"/>
                                                </Frame>

                                                <Frame Grid.Column="5" Grid.ColumnSpan="2">
                                                    <Label Text="Remaining"/>
                                                </Frame>
                                                <Frame Grid.Column="5" Grid.Row="1">
                                                    <Label Text="Unit"/>
                                                </Frame>
                                                <Frame Grid.Column="6" Grid.Row="1">
                                                    <Label Text="Val"/>
                                                </Frame>
                                                <Frame Grid.Column="7" Grid.RowSpan="2">
                                                    <Label Text="Remaining Status"/>
                                                </Frame>

                                            </Grid>
                                        </ListView.Header>
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <ViewCell>
                                                    <Grid  BackgroundColor="{Binding BackColor}" Padding="0,2,0,2" ColumnSpacing="0" RowSpacing="0">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="3*"/>
                                                            <ColumnDefinition Width="3*"/>
                                                            <ColumnDefinition Width="2*"/>
                                                            <ColumnDefinition Width="3*"/>
                                                            <ColumnDefinition Width="3*"/>
                                                            <ColumnDefinition Width="4*"/>
                                                            <ColumnDefinition Width="6*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Label Text="{Binding Id}" Grid.Column="0"/>
                                                        <Label Text="{Binding Currency}" Grid.Column="1"/>
                                                        <Label Text="{Binding DenomString}" Grid.Column="2"/>
                                                        <Label Text="{Binding DispensedUnit}" Grid.Column="3"/>
                                                        <Label Text="{Binding DispensedValue}" Grid.Column="4"/>
                                                        <Label Text="{Binding RemainingUnit}" Grid.Column="5"/>
                                                        <Label Text="{Binding RemainingValue}" Grid.Column="6"/>
                                                        <customcontrols:ChartGrid 
                                                                Grid.Column="7"
                                                                HeightRequest="7"
                                                                WidthRequest="{OnIdiom Tablet=100, Phone=60}"
                                                                Margin="{OnIdiom Phone='1,0,3,0', Tablet='1,0,3,0'}"
                                                                HorizontalOptions="Center"
                                                                VerticalOptions="Center"
                                                                InnerColor="#5C9ECD" 
                                                                OuterColor="#EBF3F9"
                                                                BorderColor="#5C9ECD"
                                                                BorderWidth="1"
                                                                PercentValue="{Binding RemainingPercent}"
                                                                ChartOrientation="Horizontal" />
                                                    </Grid>
                                                </ViewCell>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Frame>
                            </StackLayout>

                            <StackLayout Orientation="Vertical" 
                                             Margin="{OnIdiom Phone='2',Tablet='5'}"
                                             IsVisible="{Binding BillAcceptorDetailsIsVisible}">
                                <Label Text="Bill Validator" 
                                       HorizontalOptions="Start" 
                                       VerticalOptions="Start"
                                       FontSize="{OnPlatform Android={OnIdiom Tablet=20, Phone=16}, iOS={OnIdiom Tablet=18, Phone=15}}" />
                                <Frame
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="Start"
                                        HeightRequest="120"
                                        BackgroundColor="White"
                                        OutlineColor="Transparent"
                                        BorderColor="DarkGray"
                                        CornerRadius="5"
                                        HasShadow="False"
                                        Padding="0">
                                    <Frame.Resources>
                                        <ResourceDictionary>
                                            <Style TargetType="Label">
                                                <Setter Property="FontFamily" Value="{StaticResource KlavikaCHLight}"/>
                                            </Style>
                                        </ResourceDictionary>
                                    </Frame.Resources>

                                    <ListView 
                                            WidthRequest="300"
                                            Margin="1,0,1,0"
                                            ItemsSource="{Binding BillAcceptorDetails}"
                                            HasUnevenRows="True"
                                            HorizontalOptions="FillAndExpand"
                                            VerticalOptions="Start" >
                                        <ListView.Resources>
                                            <ResourceDictionary>
                                                <Style TargetType="Label">
                                                    <Setter Property="HorizontalOptions" Value="Center"/>
                                                    <Setter Property="VerticalOptions" Value="Center"/>
                                                    <Setter Property="HorizontalTextAlignment" Value="Center"/>
                                                    <Setter Property="VerticalTextAlignment" Value="Center"/>
                                                    <Setter Property="FontFamily" Value="{StaticResource KlavikaCHLight}"/>
                                                    <Setter Property="FontSize" Value="Small"/>
                                                </Style>
                                                <Style TargetType="Frame">
                                                    <Setter Property="HasShadow" Value="False"/>
                                                    <Setter Property="BorderColor" Value="DarkGray"/>
                                                    <Setter Property="Padding" Value="{OnIdiom Tablet=5,Phone=2}"/>
                                                    <Setter Property="Margin" Value="0"/>
